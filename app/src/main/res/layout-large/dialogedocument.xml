    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Title"
        android:id="@+id/ratetitlename"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_16dp"
        android:textStyle="bold"
        android:textColor="@color/colorblack"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        android:id="@+id/tview"
        android:layout_below="@+id/ratetitlename">

    </View>
    <EditText
        android:id="@+id/edtedocTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_round"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:padding="@dimen/dimen_8dp"
        android:hint="Title"
        android:textSize="15dp"
        android:layout_below="@+id/tview"
        />
  <!--  <TextView
        android:id="@+id/lbldesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_five_5dp"
        android:layout_marginBottom="@dimen/dimen_five_5dp"
        android:layout_below="@id/edtedocTitle"/>-->
    <EditText
        android:id="@+id/edtedocdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_round"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:padding="@dimen/dimen_8dp"
        android:hint="Description"
        android:layout_below="@+id/edtedocTitle"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="15dp"
        />
   <!-- <Button
        android:id="@+id/btnedocOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_below="@id/edtedocdesc"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="@dimen/dimen_10dp"

        android:layout_below="@+id/edtedocdesc">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:id="@+id/btn_titlesubmit"
            android:text="Save"
            android:background="@drawable/button_blue"
            android:textColor="@color/colorwhite"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_10dp"

            android:textSize="15dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:id="@+id/btn_titlecancel"
            android:text="Cancel"
            android:background="@drawable/button_blue"
            android:textColor="@color/colorwhite"
            android:paddingLeft="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_toLeftOf="@+id/btn_titlesubmit"

            android:textSize="15dp"
            />
    </RelativeLayout>
</RelativeLayout>
