<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.com.ehealthassist.ehealthassist.Account.ActivityPIN">
    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textenterPIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:text="@string/textview_activity_pin"
        android:textColor="@color/colorblack"
        android:textSize="@dimen/dimen_18dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/textenterPIN"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/llPINGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:orientation="horizontal"
            android:weightSum="16">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5" />

            <ImageView
                android:id="@+id/ivPIN1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pin_empty" />

            <ImageView
                android:id="@+id/ivPIN2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pin_empty" />

            <ImageView
                android:id="@+id/ivPIN3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pin_empty" />

            <ImageView
                android:id="@+id/ivPIN4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pin_empty" />

            <ImageView
                android:id="@+id/ivPIN5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pin_empty" />

            <ImageView
                android:id="@+id/ivPIN6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_pin_empty" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="5" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/llPINGroup"
            android:layout_centerHorizontal="true">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPinPad1"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="1"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad2"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="2"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad3"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="3"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad4"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="4"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad5"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="5"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad6"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="6"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad7"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="7"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad8"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="8"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPad9"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="9"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPadClear"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="CLR"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/buttonPinPad0"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="0"
                    android:textColor="@color/colorwhite"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonPinPadBackspace"
                    android:layout_width="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:height="60dp"
                    android:background="@drawable/fab_selector"
                    android:text="DEL"
                    android:textColor="@color/colorwhite"
                    android:textSize="20dp" />

            </GridLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
