<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:orientation="vertical"
    android:id="@+id/lly_psi_description"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "@string/header_psivalue"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorblack"
            android:gravity="right">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/header_psides"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/txtvalue"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorblack"
            android:layout_marginBottom="10dp"
            android:gravity="left">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_view">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtvalue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "@string/psi_0_55"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right">

        </TextView>

        <TextView
            android:id="@+id/txtdescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Good"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/txtvalue"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left">

        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_view">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "@string/psi_51_100"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right">
        </TextView>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Moderate"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/txtvalue"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left">
        </TextView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_view">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "@string/psi_101_200"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right">

        </TextView>

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Unhealthy"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/txtvalue"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginTop="10dp"

            android:layout_marginBottom="10dp"
            android:gravity="left">

        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_view">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "@string/psi_201_300"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right">

        </TextView>

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Very_Unhealthy"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/txtvalue"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left">

        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_view">

    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "@string/psi_Above_300"
            android:textSize="16dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:layout_weight="1"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="right">

        </TextView>

        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Hazardous"
            android:textSize="16dp"
            android:layout_toRightOf="@+id/txtvalue"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:gravity="left">

        </TextView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_view">

    </View>

</LinearLayout>
