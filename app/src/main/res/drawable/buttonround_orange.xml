<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFAB91" />
            <gradient android:angle="-90" android:startColor="#FFAB91" android:endColor="#FFAB91"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFAB91" />
            <solid android:color="#FFAB91"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D84315" />
            <gradient android:angle="-90" android:startColor="#D84315" android:endColor="#D84315" />
        </shape>
    </item>
</selector>

