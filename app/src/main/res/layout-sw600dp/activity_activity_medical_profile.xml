<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="sg.com.ehealthassist.ehealthassist.Profiles.ActivityMedicalProfile">


    <include layout="@layout/toolbar" />

    <sg.com.ehealthassist.ehealthassist.CustomUI.MaterialTabHost
        android:id="@+id/tabHostmedical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_58dp"
        android:layout_below="@+id/toolbar"
        app:accentColor="@color/cas_color_tab_yellow" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom"
        android:layout_below="@+id/tabHostmedical" />


</RelativeLayout>
