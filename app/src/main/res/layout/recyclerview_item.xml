<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clinic_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#0DA0A0A0"
            app:cardCornerRadius="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_three_3dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewClinicName_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GateWay Dental Center"
                    android:textSize="@dimen/dimen_18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorlightblue" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back_arrow" />
                    <ImageView
                        android:id="@+id/image_clinictyp_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/clinicdt_35"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewClinicDetailsBlockNo_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dimen_16dp"
                            android:textStyle="bold"
                            android:text="134"/>
                        <TextView
                            android:id="@+id/textViewClinicDetailsStreet_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/textViewClinicDetailsBlockNo_c"
                            android:textSize="@dimen/dimen_16dp"
                            android:paddingLeft="@dimen/dimen_five_5dp"
                            android:textStyle="bold"
                            android:text="Jurong Gadeway road"/>
                        <TextView
                            android:id="@+id/textViewClinicDetailsUnitNo_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textViewClinicDetailsBlockNo_c"
                            android:textSize="@dimen/dimen_16dp"
                            android:paddingLeft="@dimen/dimen_five_5dp"
                            android:textStyle="bold"
                            android:text="#02-307"/>
                        <TextView
                            android:id="@+id/country_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textViewClinicDetailsUnitNo_c"
                            android:textSize="@dimen/dimen_16dp"
                            android:paddingLeft="@dimen/dimen_five_5dp"
                            android:textStyle="bold"
                            android:text="Singapore"/>
                        <TextView
                            android:id="@+id/textViewClinicDetailsPostalCode_c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/country_unit"
                            android:layout_below="@id/textViewClinicDetailsUnitNo_c"
                            android:textSize="@dimen/dimen_16dp"
                            android:paddingLeft="@dimen/dimen_five_5dp"
                            android:textStyle="bold"
                            android:text="600134"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Direction"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:textSize="@dimen/dimen_16dp"/>
                        <ImageView
                            android:id="@+id/imgbtn_direction_c"
                            android:layout_width="@dimen/dimen_40dp"
                            android:layout_height="@dimen/dimen_40dp"
                            android:layout_below="@id/txt_direction"
                            android:layout_centerInParent="true"
                            android:src="@drawable/rain_direction_icon_40"/>

                    </RelativeLayout>
                    <ImageButton
                        android:layout_width="@dimen/dimen_20dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:src="@drawable/right_arrow"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"/>



                </LinearLayout>

            </LinearLayout>



        </android.support.v7.widget.CardView>


</RelativeLayout>