<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view_frag_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:cardBackgroundColor="#CCE0E0E0"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="You do not have login yet. Please login or create new account for use the application functions"
                android:textColor="#988E8F"
                android:textSize="14dp"
                android:fontFamily="@font/domine_bold"/>

            <Button
                android:id="@+id/btn_frag_goto_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_account_style"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#C2C6CA"
                android:fontFamily="@font/domine_bold"/>

            <Button
                android:id="@+id/btn_frag_create_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_account_style"
                android:text="Create New Account"
                android:textAllCaps="false"
                android:textColor="#C2C6CA"
                android:fontFamily="@font/domine_bold"/>

            <Button
                android:id="@+id/btn_frag_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:paddingLeft="25dp"
                android:text="Skip"
                android:textAllCaps="false"
                android:textColor="#4E5762"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="@font/domine_bold"/>

        </LinearLayout>

</android.support.v7.widget.CardView>


