<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/domine_regular"
        android:text="Forgot Password"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/domine_regular"
        android:text="Are you sure to reset your password?"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp">
        <Button
            android:id="@+id/btn_alert_forgotpwd_cancel"
            android:fontFamily="@font/domine_regular"
            android:text="Cancel"
            android:textAllCaps="false"
            android:background="@drawable/linear_continue_background"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fff"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btn_alert_forgotpwd_reset"
            android:fontFamily="@font/domine_regular"
            android:textColor="#fff"
            android:text="OK"
            android:textAllCaps="false"
            android:background="@drawable/linear_continue_background"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </LinearLayout>

</LinearLayout>