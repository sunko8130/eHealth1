    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_70dp"
        >

        <ImageView
            android:id="@+id/imgheader"
            android:layout_width="@dimen/dimen_38dp"
            android:layout_height="@dimen/dimen_38dp"
            android:layout_marginTop="@dimen/dimen_five_5dp"
            android:src="@drawable/e" />

        <customs_library.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_five_5dp"
            android:layout_toRightOf="@+id/imgheader"
            android:text="@string/_header"
            android:textColor="@color/colorwhite"
            android:textSize="@dimen/dimen_40dp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>
