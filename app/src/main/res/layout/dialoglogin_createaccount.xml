    <Button
        android:id="@+id/btn_gotologin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/buttonround"
        android:text="@string/activity_create_account_login"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen_16dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        />
    <Button
        android:id="@+id/btn_create_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_below="@+id/btn_gotologin"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:textSize="@dimen/dimen_16dp"
        android:background="@drawable/buttonround_orange"
        android:text="@string/activity_create_account_createnewaccount"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:textColor="@color/colorwhite"

        />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:text="@string/activity_create_account_skip"
        android:textSize="@dimen/dimen_18dp"
        android:background="@android:color/transparent"
        android:textColor="@color/colorwhite"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_create_account"
        />
</RelativeLayout>
