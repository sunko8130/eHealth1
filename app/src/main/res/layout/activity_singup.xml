            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/colorwhite"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="*"
                    android:textColor="@color/colorred"
                    android:textSize="@dimen/dimen_16dp" />

                <EditText
                    android:id="@+id/editext_Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_five_5dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_five_5dp"
                    android:background="@drawable/edittext_round"
                    android:hint="Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:padding="@dimen/dimen_8dp"
                    android:textColor="@color/colorblack"
                    android:textColorHighlight="@color/colorhint"
                    android:textSize="@dimen/dimen_16dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="NOTE"
                android:textSize="@dimen/dimen_16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_one_1dp"
                android:layout_marginTop="@dimen/dimen_five_5dp"
                android:background="@color/gray_view"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Forgetten password details will be sent to email address entered.OTP will be sent to the phone number enter for verification."
                android:textSize="@dimen/dimen_16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_one_1dp"
                android:layout_marginTop="@dimen/dimen_five_5dp"
                android:background="@color/gray_view"></View>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_five_5dp"
                android:background="@drawable/buttonround"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/blue_primary_900"
                android:textSize="@dimen/dimen_18dp" />

            <LinearLayout

                android:id="@+id/llcheckbox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/CheckBoxAgree"
                    style="@style/CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/msg_sign_up_agree"
                    android:textSize="@dimen/dimen_16dp"

                    />

                <TextView
                    android:id="@+id/txtlink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:clickable="true"
                    android:text="@string/tnc_link"
                    android:textSize="@dimen/dimen_16dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_minus_15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtlink_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:clickable="true"
                    android:text="@string/tnc_linkcon"
                    android:textSize="@dimen/dimen_16dp" />

                <TextView
                    android:id="@+id/link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/txtlink"
                    android:text=" and "
                    android:textSize="@dimen/dimen_16dp" />

                <TextView
                    android:id="@+id/txtprivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:layout_toRightOf="@+id/link"
                    android:clickable="true"
                    android:text="@string/privacy_link"
                    android:textSize="@dimen/dimen_16dp"

                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    &lt;!&ndash;  <include layout="@layout/toolbar"
          android:layout_alignParentTop="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />&ndash;&gt;-->
</RelativeLayout>
