<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imgv_driveid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/google_drive_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgv_driveid"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/cloud_message"
        android:textColor="@color/colorblack"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btndownloadfromdrive"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonround_drive_blue"
            android:text="Sync From Drive"
            android:textColor="@color/colorwhite"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnuploadtodrive"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/btndownloadfromdrive"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonround_drive_blue"
            android:text="Sync To Drive"
            android:textColor="@color/colorwhite"
            android:textSize="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btndrive_cancel"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/btnuploadtodrive"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonround_drive_blue"
            android:text="Cancel"
            android:textColor="@color/colorwhite"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>
