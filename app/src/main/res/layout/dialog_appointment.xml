<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment Booked"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_22dp"
        android:textColor="@color/colorwhite"
        android:id="@+id/txt_appt_result"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book id : 111111"
        android:textSize="@dimen/dimen_18dp"
        android:layout_margin="@dimen/dimen_20dp"

        android:gravity="center"
        android:layout_below="@+id/txt_appt_result"
        android:textColor="@color/colorwhite"
        android:id="@+id/txt_appt_bookmessage"
        android:visibility="gone"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Appointment id : 111111"
        android:textSize="@dimen/dimen_18dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:gravity="center"
        android:layout_below="@+id/txt_appt_bookmessage"
        android:textColor="@color/colorwhite"
        android:id="@+id/txt_appt_bookid"/>

    <ImageView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src = "@drawable/ic_done_white_24dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dimen_10dp"
        android:id="@+id/img_appt_result"
        android:layout_below="@+id/txt_appt_bookid"
        >
    </ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="@dimen/dimen_16dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_40dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:textColor="@color/colorwhite"
        android:id="@+id/btn_appt_result"
        android:layout_below="@+id/img_appt_result"
        />

</RelativeLayout>
